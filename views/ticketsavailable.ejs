
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ticetac</title>
    <!-- To add in order to scale the view for mobiles -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="./stylesheets/style.css">
  </head>
  <body>
    <%- include('navbar'); %>

    <div class="container ">  

        <h3 class="homeTitle">Tickets available : </h3>

        <!-- Input Field -->

        <% if(journeyTab.length > 0){ %>

        <div class="resultField">

            <!-- Result Number 1 -->

            <% for(var i = 0; i<journeyTab.length; i++){ %>

            <div class="card w-50">
                <div class="card-body resultCard">
                    <!-- <div>Paris / Lille</div> -->
                    <div> <%= journeyTab[i].departure %> / <%= journeyTab[i].arrival %></div>
                    <div><small class="text-muted">train departure at : <%= journeyTab[i].departureTime %> pm</small></div>
                    <div style="display: flex;justify-content: center;align-items: center;">
                     <div style="font-size: 20px;"><%= journeyTab[i].price %> â‚¬</div>
                     

                     <form action="/basket" method="POST">
                        <input type="hidden" name="ticketDeparture" value=<%= journeyTab[i].departure %>>
                        <input type="hidden" name="ticketArrival" value=<%= journeyTab[i].arrival%>>
                        <input type="hidden" name="ticketDepartureTime" value=<%= journeyTab[i].departureTime %>>
                        <input type="hidden" name="ticketPrice" value=<%= journeyTab[i].price %>>
                        <input type="hidden" name="ticketDate" value="<%= journeyTab[i].date %>">
                        <input type="hidden" name="userId" value=<%= userId %>>
                        <button class="btn btn-danger mx-sm-3">OK</button>
                    </form>

                        <!-- <a href="/myTicket" class="btn btn-danger mx-sm-3">OK</a> -->
                    </div>  
                </div>
            </div>

            <% } %>

        </div>

        <% }else{ %>


        <div class="noTrainMessage">
            <h3 style="color:white;margin-bottom: 15px;">Oops ! No trains available... </h3>
            <a href="/homepage" class="btn btn-danger mx-sm-3">Home</a>
        </div>

        <% } %>



<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

<%- include('footer'); %>

</body>

