      <!-- Test title -->
      <h3 class="homeTitle">One-way ticket : </h3>

      <!-- Input Field -->
      <div class="inputField">
          <form class="form-inline" action="/journeys" method="POST">

              <div class="form-group">
                  <input name="departureCity" type="text" class="form-control" id="inputPassword2" placeholder="From: Paris, Marseille..." required>
              </div>
                  
              <div class="form-group mx-sm-3">
                  <input name="arrivalCity" type="text" class="form-control" id="inputPassword2" placeholder="To: Lille, Nantes... " required>
              </div>

              <div class="form-group ">
                  <input name="journeyDate" type="date" class="form-control" id="inputPassword2" placeholder="Date : 02/08" required>
              </div>

            
                  
              <button type="submit" class="btn btn-danger mx-sm-3">Go</button>
        </div>


        <div class="divImg">
          <img src="/images/landmark.png" class="cityImg" alt="">
      </div>

    </div>


      
